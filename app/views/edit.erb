<h1><%= @recipe.name%></h1>
<p><%= @recipe.ingredients%></p>
<p><%= @recipe.cook_time%> minutes</p>

<h2>Edit Recipe</h2>

<form class="" action="/recipes/<%=@recipe.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <ul>
    <li>
      <label for="name"> Recipe's Name:</label>
      <input id="name" type="text" name="recipe[name]" value="<%=@recipe.name%>">
    </li>
    <li>
      <label for="ingredients"> Recipe's Ingredients:</label>
      <input id="ingredients" type="text" name="recipe[ingredients]" value="<%= @recipe.ingredients%>">
    </li>
    <li>
      <label for="cook_time"> Recipe's Cook Time:</label>
      <input id="cook_time" type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time%> minutes">
    </li>
    <li>
      <input type="submit" value="submit"></input>
    </li>
  </ul>
</form>
